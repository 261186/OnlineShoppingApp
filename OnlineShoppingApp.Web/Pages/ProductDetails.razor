@page "/ProductDetails/{Id:int}"
@inherits ProductDetailsBase

@if (Product == null && ErrorMessage == null)
{
    <DisplaySpinner></DisplaySpinner>
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <h3 class="mb-5">Ürün detayı</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Product.ImageURL" />
        </div>
        <div class="col-md-6">
            <h3>@Product.Name</h3>
            <p class="mb-4">@Product.Description</p>
            <p class="mb-4"><b>@Product.Price.ToString("C")&nbsp;(@Product.Quantity Stoktaki ürünler)</b></p>

            <div>
                <button class="btn btn-success"
                        @onclick="() => (AddToCart_Click(new CartItemToAddDto{
                            CartId = DenemeCod.CartId,
                            ProductId = Product.Id,
                            Quantity = 1
                    }))">
                    <b>Sepete Ekle</b>
                </button>
            </div>
        </div>
    </div>
}
